---
import { Icon } from "astro-icon/components"

interface Props {
	iconName: string,
	title: string,
	body: string,
	href: string,
	dark?: boolean
}

const { iconName, href, title, body, dark } = Astro.props;
---

<div class="link-wrapper">
	<div class="link-card" class:list={dark ? "dark" : ""}>
		<a href={href}>
			<div class="flex flex-row items-baseline gap-x-2 mb-3">
				<Icon name={iconName}></Icon>
				<h2 class="text-lg underline">
					{title}
				</h2>
			</div>
			<p>
				{body}
			</p>
		</a>
	</div>
</div>

<style>
	.link-card{
		transition: all;
		transition-duration: 200ms;

		padding: 20px;
		border: 1px dashed #aaa;
		border-left: none;
		border-top: none;
	}
	
	.link-card:hover, .link-card:active{
		border-color: #eee;
	}

	.dark{
		border-color: rgb(15 23 42);
	}
</style>
