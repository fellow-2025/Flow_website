---
import LayoutWithScrollBar from "../../layouts/LayoutWithScrollBar.astro";
import Container from "../../layouts/Container.astro";
import Footer from "../../layouts/Footer.astro";

import NeoTop from "../../components/NeoTop.astro";

import V7Performers from '../../components/v7/V7Performers.astro'

import ExternalLinks from "../../components/ExternalLinks.astro";
import AboutFellow from "../../components/AboutFellow.astro";

import { parse as dfParse, format as dfFormat } from 'date-fns'
import type { simplePalette } from "../../types";

const vol = 8
const dateTime = dfParse('2025/9/26', 'yyyy/M/dd', new Date())

const comment = "<!-- we can't show you performers yet. stay tuned, you curious geek. -->"

const colors: simplePalette = {
    bg: "#FAFFF3",
    txt: "#2C2525",
    accent: "#2C2525",
    scrollTrack: "#FAFFF3",
    scrollThumb: "#2C2525"
}

--- 

<LayoutWithScrollBar
    title=`FLOW vol.${vol}`
    desc=`オーディオビジュアルイベントFLOWの第${vol}回。${dfFormat(dateTime, 'yyyy年M月dd日')}に開催。`
    favicon="/favicon.ico"
    colors={colors}>

    <div style=`background-color: ${colors.bg};min-width: 100vw;" class="min-h-screen fixed -z-10`>
        <!-- <ThreeBackground client:only="react"></ThreeBackground> -->
    </div>

    <main>
        <section id="top" class="overflow-hidden">
            <!-- getMonth is 0 basis!!!!! -->
            <NeoTop
                nVol={vol},
                date={dateTime},
                timeFrom={{hr: 18, mn:15}},
                timeTo={{hr: 20, mn: 30}},
                place0="TERRACE GATE",
                place1="Ritsumeikan Univ. OIC",
                placeAddr="2-150 Iwakuracho, Ibaraki, Osaka 567-8570",
                hashtag="#flow_fellow",
                heldBy="Fellow",
                imgName="fellow_invert.webp",
                colors={colors}
            / >
        </section>

        <div id="content" class="mt-36">
            <section id="performers" class="font-nijimi">
                <Container>
                    <h2>Flow vol.{vol} 出演者</h2>
                    <p>
                        近日公開。乞うご期待。
                    </p>

                    <Fragment set:html={comment}>

                    <!-- <div class="mx-5">
                    </div> -->
                </Container>
            </section>

            <section id="externalLinks" class="font-nijimi">
                <Container>
                    <div class="mx-5">
                        <ExternalLinks />
                    </div>
                </Container>
            </section>

            <section id="about" class="font-nijimi">
                <Container>
                    <h2>Fellowとは</h2>
                    <div class="mx-5">
                        <AboutFellow />
                    </div>
                </Container>
            </section>

            <Footer year={2025} presentedBy="Fellow" />
        </div>
    </main>
</LayoutWithScrollBar>

<style define:vars={ colors }>
    main{
        background: var(--bg);
        color: var(--txt);
        /* background: linear-gradient(135deg,rgba(189, 72, 72, 1) 5%, rgba(209, 115, 115, 1) 19%, rgba(196, 39, 39, 1) 34%, rgba(80, 0, 0, 1) 50%, rgba(30, 0, 0, 1) 77%, rgba(18, 17, 17, 1) 100%); */
    }

    .bg-fade{
        height: 150px;
        background: rgb(80,80,80);
        background: linear-gradient(0deg, rgba(80,80,80,0.7) 0%, rgba(80,80,80,0) 100%);
    }
    #content{
        /* background-color: rgba(80,80,80,.7); */
    }

    h2{
        font-size: 1.8rem;
        margin: 15px 0;
        border-bottom: 1px dashed #e7e5e4;
        padding-bottom: 10px;
    }
</style>