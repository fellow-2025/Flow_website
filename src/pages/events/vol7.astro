---
import Layout from "../../layouts/Layout.astro";
import Container from "../../layouts/Container.astro";
import Footer from "../../layouts/Footer.astro";

import NeoTop from "../../components/NeoTop.astro";

import V7Performers from '../../components/v7/V7Performers.astro'

import ExternalLinks from "../../components/ExternalLinks.astro";
import AboutFellow from "../../components/AboutFellow.astro";

import ThreeBackground from "../../islands/v7/ThreeBackground";

import { parse as dfParse, format as dfFormat, getYear as getDfYr, getMonth as getDfMth, getDate as getDfDate } from 'date-fns'

const vol = 7
const dateTime = dfParse('2025/7/15', 'yyyy/M/dd', new Date())

--- 

<Layout
    title=`FLOW vol.${vol}`
    desc=`オーディオビジュアルイベントFLOWの第${vol}回。${dfFormat(dateTime, 'yyyy年M月dd日')}に開催。`
    favicon="/favicon.ico">

    <div style="background-color: #768a45;">
        <ThreeBackground client:only="react"></ThreeBackground>
    </div>

    <main>
        <section id="top" class="overflow-hidden text-slate-50">
            <!-- getMonth is 0 basis!!!!! -->
            <NeoTop
                nVol={vol},
                date={dateTime},
                timeFrom={{hr: 18, mn:15}},
                timeTo={{hr: 20, mn: 30}},
                place0="TERRACE GATE",
                place1="Ritsumeikan Univ. OIC",
                placeAddr="2-150 Iwakuracho, Ibaraki, Osaka 567-8570",
                hashtag="#flow_fellow",
                heldBy="Fellow",
                imgName="fellow_invert.webp",
            / >
        </section>

        <div id="content" class="mt-36 text-stone-200">
            <!-- we don't ahave statement this time -->

            <section id="performers" class="font-nijimi">
                <Container>
                    <h2>Flow vol.{vol} 出演者</h2>
                    <div class="mx-5">
                        <V7Performers />
                    </div>
                </Container>
            </section>

            <section id="externalLinks" class="font-nijimi">
                <Container>
                    <div class="mx-5">
                        <ExternalLinks />
                    </div>
                </Container>
            </section>

            <section id="about" class="font-nijimi">
                <Container>
                    <h2>Fellowとは</h2>
                    <div class="mx-5">
                        <AboutFellow />
                    </div>
                </Container>
            </section>

            <Footer year={2025} presentedBy="Fellow" />
        </div>
    </main>
</Layout>

<style>
    html{
        background: #1f1f1f;
        /* background: linear-gradient(135deg,rgba(189, 72, 72, 1) 5%, rgba(209, 115, 115, 1) 19%, rgba(196, 39, 39, 1) 34%, rgba(80, 0, 0, 1) 50%, rgba(30, 0, 0, 1) 77%, rgba(18, 17, 17, 1) 100%); */
    }

    main{
        background: url();
    }

    .bg-fade{
        height: 150px;
        background: rgb(80,80,80);
        background: linear-gradient(0deg, rgba(80,80,80,0.7) 0%, rgba(80,80,80,0) 100%);
    }
    #content{
        /* background-color: rgba(80,80,80,.7); */
    }

    h2{
        font-size: 1.8rem;
        margin: 15px 0;
        border-bottom: 1px dashed #e7e5e4;
        padding-bottom: 10px;
    }

    
    body {
        --sb-track-color: #768a45;
        --sb-thumb-color: #546130;
        --sb-size: 5px;
    }

